# application settings
CONFIG_APP_FORCE_LAUNCHPAD=y
CONFIG_APP_DUMP_PERIPHERALS=y

# default log level
CONFIG_BOOTLOADER_LOG_LEVEL_VERBOSE=y
CONFIG_BOOTLOADER_LOG_LEVEL_VERBOSE=y

# flash via UART requires no stub and manual reset
CONFIG_ESPTOOLPY_NO_STUB=y
CONFIG_ESPTOOLPY_BEFORE_NORESET=y
CONFIG_ESPTOOLPY_AFTER_NORESET=y

# usb settings
CONFIG_ESP32S2_KEEP_USB_ALIVE=y
CONFIG_ESP_PHY_ENABLE_USB=y

# console output settings
CONFIG_ESP_CONSOLE_USB_CDC=y
CONFIG_ESP_CONSOLE_USB_CDC_RX_BUF_SIZE=64
CONFIG_ESP_CONSOLE_USB_CDC_SUPPORT_ETS_PRINTF=y
CONFIG_ESP_CONSOLE_UART_NUM=-1

# panic handling
CONFIG_ESP_SYSTEM_PANIC_PRINT_HALT=y
CONFIG_ESP32S2_PANIC_PRINT_HALT=y

# freertos settings
CONFIG_FREERTOS_USE_TRACE_FACILITY=y
